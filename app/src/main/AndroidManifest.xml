<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rhotv.rhotv">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/imgpsh_fullsize_anim"
        android:label="@string/app_name"
        android:roundIcon="@drawable/imgpsh_fullsize_anim"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        android:name="com.rhotv.rhotv.ApplicationClass">
        <activity
            android:name="com.rhotv.rhotv.MainActivity"
            android:label="@string/title_activity_main"
            android:exported="false"
            android:configChanges="orientation|keyboardHidden"
            android:hardwareAccelerated="true"/>
        <activity android:name="com.rhotv.rhotv.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>